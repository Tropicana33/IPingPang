<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    	android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
	    >
	    <RelativeLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="#fff"
            android:id="@+id/rl_setting_auto_rotate"
	        >
	       <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="屏幕自动旋转"
	    	android:textColor="#000"
	    	android:textSize="20dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	/> 
	    	<ImageView 
	    	android:id="@+id/iv_setting_auto_rotate"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentRight="true"
	   		android:src="@drawable/checked_box_1"
	   		android:scaleX="0.5"
	   		android:scaleY="0.5"
	   		android:layout_centerVertical="true"
	    	    />
	    </RelativeLayout>
	   <ImageView 
	       android:layout_width="match_parent"
	       android:layout_height="1px"
	       android:background="@android:color/darker_gray"
	       />
	    <RelativeLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/rl_setting_pull"
	        >
	       <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="接收推送消息"
	    	android:textColor="#000"
	    	android:textSize="20dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	/> 
	    	<ImageView 
	    	android:id="@+id/iv_setting_pull"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentRight="true"
	   		android:src="@drawable/checked_box_1"
	   		android:scaleX="0.5"
	   		android:scaleY="0.5"
	   		android:layout_centerVertical="true"
	    	    />
	    </RelativeLayout>
	    
	   <RelativeLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="#fff"
            android:padding="10dip"
            android:id="@+id/rl_setting_update"
	        >
	       <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="版本检查更新"
	    	android:textColor="#000"
	    	android:textSize="20dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	/> 
	    	<ImageView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentRight="true"
	   		android:src="@drawable/userinfo_arror"
	   		android:layout_centerVertical="true"
	   		android:layout_marginRight="10dip"
	    	    />
	    </RelativeLayout> 
	    <ImageView 
	       android:layout_width="match_parent"
	       android:layout_height="1px"
	       android:background="@android:color/darker_gray"
	       />
	     <RelativeLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dip"
            android:id="@+id/rl_setting_buffer_clean"
	        >
	       <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="清除缓存"
	    	android:textColor="#000"
	    	android:textSize="20dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	/> 
	    	<ImageView 
	    	    android:id="@+id/iv_buffer_array"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentRight="true"
	   		android:src="@drawable/userinfo_arror"
	   		android:layout_centerVertical="true"
	   		android:layout_marginRight="10dip"
	    	    />
	    	<TextView 
	    	    android:id="@+id/tv_buffer_size"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text=""
	    	android:textColor="@android:color/darker_gray"
	    	android:textSize="15dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	android:layout_toLeftOf="@id/iv_buffer_array"
	    	    />	
	    </RelativeLayout> 
	    <ImageView 
	       android:layout_width="match_parent"
	       android:layout_height="1px"
	       android:background="@android:color/darker_gray"
	       />
	      <RelativeLayout 
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dip"
            android:id="@+id/rl_setting_feedback"
	        >
	       <TextView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	    	android:text="建议反馈"
	    	android:textColor="#000"
	    	android:textSize="20dip"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	/> 
	    	<ImageView 
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content" 
	   		android:layout_alignParentRight="true"
	   		android:src="@drawable/userinfo_arror"
	   		android:layout_centerVertical="true"
	   		android:layout_marginRight="10dip"
	    	    />
	    </RelativeLayout>
	     
	</LinearLayout>
	
    
    
</ScrollView>
